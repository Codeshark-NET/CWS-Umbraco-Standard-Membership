@using System.Web.Mvc.Html
@using UmbracoStandardMembership.Models
@using Umbraco.Web
@using UmbracoStandardMembership.Controllers.SurfaceControllers
@model AuthModel.ForgottenPasswordViewModel


@using(Html.BeginUmbracoForm<AuthSurfaceController>("HandleForgottenPassword") )
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Forgotten Password</legend>

        
		<div class="editor-label">
            @Html.LabelFor(model => model.EmailAddress)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.EmailAddress)
            @Html.ValidationMessageFor(model => model.EmailAddress)
        </div>

        <p>
            <input type="submit" value="Remind Me" />
        </p>
    </fieldset>
}